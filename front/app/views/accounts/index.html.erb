<h1>All Accounts</h1>

<table class="table table-striped table-condensed">
	<tr>
		<th>Account</th>
		<th>Creation</th>
		<th>Name</th>
		<th>Amount</th>
		<th>Actions</th>
	</tr>
	<% @transactions.each do |transaction| %>
		<tr class="transaction">
			<td><%= transaction.account.name %></td>
			<td><%= transaction.creation %></td>
			<td><%= transaction.name %></td>
			<td><%= number_to_currency transaction.amount %></td>
			<td>
				<%= link_to "edit", edit_account_transaction_path(transaction.account, transaction), class: "btn btn-mini" %>
				<%= confirmation_delete_link transaction, account_transaction_path(transaction.account, transaction), "Deleting Transaction", "Are you sure to delete this transaction?" %>
			</td>
		</tr>
	<% end %>
</table>