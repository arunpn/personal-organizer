<nav class="well" id="accounts_list">
  <h2>Accounts</h2>
  <%= link_to "New", new_account_path, class: "btn btn-primary btn-small pull-right new_account" %>

  <% if @accounts.empty? %>
    <span>No accounts yet, you <%= link_to 'should create one', new_account_path %></span>
  <% else %>
    <% @accounts.each do |account| %>
      <div class="account">
        <div class="name"><%= link_to account.name, account %></div>
        <div class="current_balance"><%= number_to_currency(account.current_balance) %></div>
				<div class="actions">
					<%= edit_account_link(account) %>
					<%= delete_account_link(account) %>
				</div>
      </div>
    <% end %>
  <% end %>
	
	<div class="total">
		<div>Total</div>
		<div><%= number_to_currency(accounts_total) %></div>
	</div>
</nav>

