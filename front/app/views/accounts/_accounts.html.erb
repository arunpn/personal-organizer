<nav class="well">
  <h2>Accounts</h2>
  <%= link_to "Add Account", new_account_path, class: "btn btn-primary btn-small pull-right" %>

  <% if @accounts.empty? %>
    <span>No accounts yet, you <%= link_to 'should create one', new_account_path %></span>
  <% else %>
    <% @accounts.each do |account| %>
      <div class="account">
        <span class="name"><%= link_to account.name, account %></span>
        <span class="current_balance"><%= account.current_balance %></span>
        <%= link_to "edit", edit_account_path(account) %>
				<%= confirmation_delete_link account, account_path(account), "Are you sure to delete the account?", "Your account and all its transactions will be lost forever." %>
      </div>
    <% end %>
  <% end %>
</nav>
