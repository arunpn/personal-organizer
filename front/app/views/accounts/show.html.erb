<h1>Account: <%= @account.name %></h1>

<%= link_to "Add Transactions", new_account_transactions_path(@account), class: 'btn btn-primary btn-large pull-rigth' %>

<table class="table table-striped table-condensed">
	<tr>
		<th>Creation</th>
		<th>Name</th>
		<th>Amount</th>
		<th>Actions</th>
	</tr>
	<% @account.transactions.each do |transaction| %>
		<tr class="transaction">
			<td><%= transaction.creation %></td>
			<td><%= transaction.name %></td>
			<td><%= number_to_currency transaction.amount %></td>
			<td>
				<%= link_to "edit", edit_account_transaction_path(@account, transaction), class: "btn btn-mini" %>
				<%= confirmation_delete_link transaction, account_transaction_path(@account, transaction), "Deleting Transaction", "Are you sure to delete this transaction?" %>
			</td>
		</tr>
	<% end %>
</table>