<h1>Account: <%= @account.name %></h1>

<%= link_to "Add Transactions", new_account_transactions_path(@account), class: 'btn btn-primary btn-large pull-rigth' %>

<table class="table table-striped table-bordered table-condensed">
	<tr>
		<th>Name</th>
		<th>Amount</th>
		<th>Actions</th>
	</tr>
	<% @account.transactions.each do |transaction| %>
		<tr class="transaction">
			<td><%= transaction.name %></td>
			<td><%= number_to_currency transaction.amount %></td>
			<td>
        <%= link_to "delete", '#', :'data-toggle' => 'modal', :'data-target' => "#delete_transaction_#{transaction.id}", class: 'btn btn-mini btn-danger' %>
        <div id="delete_transaction_<%= transaction.id %>" class="modal hide fade">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Deleting Transaction</h3>
          </div>
          <div class="modal-body">
            <p>Are you sure to delete this transaction?</p>
          </div>
          <div class="modal-footer">
            <%= link_to "Cancel", '#', class: "btn", :'data-dismiss' => "modal" %>
            <%= link_to "Confirm", account_transaction_path(@account, transaction), method: :delete, class: "btn btn-primary" %>
          </div>
        </div>
			</td>
		</tr>
	<% end %>
</table>