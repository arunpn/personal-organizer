<h1 class="object_title">Account: <%= @account.name %></h1>

<%= link_to "Add Transactions", new_account_transactions_path(@account), class: 'btn btn-primary btn-large new_object' %>

<table class="table table-striped table-condensed transactions show_table">
	<tr>
		<th class="creation">Creation</th>
		<th class="name">Name</th>
		<th class="amount">Amount</th>
		<th class="category">Category</th>
		<th class="actions"></th>
	</tr>
	<% @account.transactions.each do |transaction| %>
		<%= render 'transactions/transaction', transaction: transaction %>
	<% end %>
</table>